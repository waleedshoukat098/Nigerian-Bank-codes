<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/innerfirst"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2.5dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:backgroundTint="#E1D8BF"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/bank"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/banks">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bank"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Bank"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black">

        </View>

        <!-- Card 2 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginStart="2.5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:backgroundTint="#B3E0FF"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/swiftcode"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:src="@drawable/swift">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/swiftcode"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Swift Code"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_below="@+id/firstRow"
        android:layout_height="2dp">

    </View>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/firstRow"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2.5dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:backgroundTint="#F5F5F5"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/network"
                        android:layout_width="70dp"
                        android:layout_height="70dp"

                        android:layout_centerHorizontal="true"
                        android:src="@drawable/signal">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/network"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Networks"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </TextView>
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black">

        </View>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginStart="2.5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:backgroundTint="#D8C6E6"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/gen"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/general">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gen"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Generals"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_below="@+id/secondRow"
        android:layout_height="2dp">

    </View>
    <LinearLayout
        android:id="@+id/thirdrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/secondRow"
        android:layout_marginTop="5dp">

        <!-- Card 5 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginStart="2.5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/fif"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:backgroundTint="#ADD8E6"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/ss"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/policy">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ss"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Privacy Policy"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold">

                    </TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black">

        </View>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginStart="2.5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:backgroundTint="#C1E8D3"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/six"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/moreapps">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/six"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="More Apps"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold">

                    </TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_below="@+id/thirdrow"
        android:layout_height="2dp">

    </View>



</RelativeLayout>

